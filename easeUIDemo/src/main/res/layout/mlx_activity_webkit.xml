<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <easeui.widget.EaseTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"/>
    <ProgressBar
        android:id="@+id/pg_wv"
        style="@style/tallerBarStyle"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:layout_below="@+id/title_bar"
        />
    <ImageView
        android:id="@+id/btn_chat_nodot"
        android:layout_width="50dp"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:onClick="click"
        android:scaleType="centerInside"
        android:src="@drawable/mlx_tochat_nodot"/>
    <ImageView
        android:id="@+id/btn_chat_dot"
        android:layout_width="50dp"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:onClick="click"
        android:scaleType="centerInside"
        android:src="@drawable/mlx_tochat_dot"/>
    <ImageView
        android:id="@+id/img_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:src="@drawable/mlx_net_error"
        android:scaleType="centerInside"
        android:onClick="netClick"
        android:visibility="gone"
        android:layout_below="@+id/title_bar"/>
</RelativeLayout>
