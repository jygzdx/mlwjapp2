<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mlx_login_back" />

    <easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/login_img_size"
            android:layout_height="@dimen/login_img_size"
            android:scaleType="fitCenter"
            android:src="@drawable/mlx_login_username"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@color/login_line"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/edit_username"
            android:layout_width="@dimen/login_edit_width"
            android:layout_height="40dp"
            android:textColor="@color/login_text"
            android:inputType="phone"
            android:hint="请输入手机号"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/login_edit_size"
            android:background="#00000000"/>

    </LinearLayout>
    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_username"
        android:layout_alignLeft="@+id/ll_username"
        android:layout_alignRight="@+id/ll_username"

        android:layout_marginTop="10dp"
        android:background="@color/login_line"/>


    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/line1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line1"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/login_img_size"
            android:layout_height="@dimen/login_img_size"
            android:scaleType="fitCenter"
            android:src="@drawable/mlx_login_pswd"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@color/login_line"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/edit_code"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:textColor="@color/login_text"
            android:hint="请输入验证码"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/login_edit_size"
            android:inputType="text|number"
            android:background="#00000000"/>
        <Button
            android:id="@+id/btn_getCode"
            android:background="#00000000"
            android:textColor="#fff"
            android:text="获取验证码"
            android:textSize="14sp"
            android:layout_width="70dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_code"
        android:layout_alignLeft="@+id/ll_code"
        android:layout_alignRight="@+id/ll_code"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:background="@color/login_line"/>

    <LinearLayout
        android:id="@+id/ll_pswd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/line4"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line4"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/login_img_size"
            android:layout_height="@dimen/login_img_size"
            android:scaleType="fitCenter"
            android:src="@drawable/mlx_login_pswd"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@color/login_line"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/edit_pswd1"
            android:layout_width="@dimen/login_edit_width"
            android:layout_height="40dp"
            android:textColor="@color/login_text"
            android:password="true"
            android:hint="请输入密码"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/login_edit_size"
            android:background="#00000000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_pswd1"
        android:layout_alignLeft="@+id/ll_pswd1"
        android:layout_alignRight="@+id/ll_pswd1"
        android:layout_marginTop="10dp"
        android:background="@color/login_line"/>

    <LinearLayout
        android:id="@+id/ll_pswd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/line1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line2"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/login_img_size"
            android:layout_height="@dimen/login_img_size"
            android:scaleType="fitCenter"
            android:src="@drawable/mlx_login_pswd"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@color/login_line"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/edit_pswd2"
            android:layout_width="@dimen/login_edit_width"
            android:layout_height="40dp"
            android:textColor="@color/login_text"
            android:password="true"
            android:hint="请再次输入密码"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/login_edit_size"
            android:background="#00000000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_pswd2"
        android:layout_alignLeft="@+id/ll_pswd2"
        android:layout_alignRight="@+id/ll_pswd2"
        android:layout_marginTop="10dp"
        android:background="@color/login_line"/>


    <ImageView
        android:id="@+id/image_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mlx_login_submit"/>
</RelativeLayout>
