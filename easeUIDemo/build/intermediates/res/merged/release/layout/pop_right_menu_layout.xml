    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_pop_padding"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/pop_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mlx_pop2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群聊"
                android:textSize="@dimen/size_pop_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/pop_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_pop_padding"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:src="@drawable/mlx_pop1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="@dimen/size_pop_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pop_sao"
            android:padding="@dimen/size_pop_padding"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:src="@drawable/mlx_pop4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textSize="@dimen/size_pop_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pop_set"
            android:padding="@dimen/size_pop_padding"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:src="@drawable/mlx_pop3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="@dimen/size_pop_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                 />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pop_shou"
            android:padding="@dimen/size_pop_padding"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:src="@drawable/mlx_pop7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="@dimen/size_pop_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pop_kefu"
            android:padding="@dimen/size_pop_padding"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:src="@drawable/mlx_pop5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textSize="@dimen/size_pop_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pop_qq"
            android:padding="@dimen/size_pop_padding"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:src="@drawable/mlx_pop6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:textSize="@dimen/size_pop_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                 />
        </LinearLayout>

    </LinearLayout>

