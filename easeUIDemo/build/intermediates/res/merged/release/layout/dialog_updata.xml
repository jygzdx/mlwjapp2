<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                android:weightSum="1">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/dialog_title"
        android:src="@drawable/mlx_icon"
        android:padding="4dp"
    />
    <TextView
        android:paddingLeft="3dp"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="升级提示"
        android:textColor="#4170DC"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/dialog_title"
        android:layout_toEndOf="@+id/dialog_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3969DB"
        android:layout_below="@+id/dialog_title"
        android:id="@+id/dialog_fengexian"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9CA0A0"
        android:layout_below="@+id/dialog_selected"
        android:id="@+id/dialog_fengexian1"
    />
    <TextView
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="    您好！您当前的版本不是最新版本，请问你是否更新新版本？"
        android:id="@+id/dialog_wenben"
        android:textSize="15sp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/dialog_fengexian"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
    />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忽略本次更新"
        android:id="@+id/dialog_selected"
        android:layout_below="@+id/dialog_wenben"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:layout_below="@+id/dialog_fengexian1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#9CA0A0"
    >
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="取消"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/dialog_Negative"
            android:background="#ffffff"
        />
        <TextView
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="#9CA0A0"
            android:id="@+id/dialog_fengexian2"
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="更新"
            android:layout_weight="1"
            android:background="#ffffff"
            android:id="@+id/dialog_Positive"
        />

    </LinearLayout>
</RelativeLayout>
