<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:src="@drawable/mlx_login1"/>
    <ImageView
        android:id="@+id/img_wx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/mlx_login_wx"/>
    <ImageView
        android:id="@+id/img_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_wx"
        android:layout_margin="12dp"
        android:src="@drawable/mlx_home_login"/>
    <TextView
        android:id="@+id/text_sign"
        android:text="立即注册"
        android:textColor="#fff"
        android:layout_alignLeft="@id/img_login"
        android:layout_below="@+id/img_login"
        android:layout_width="wrap_content"
        android:background="#00000000"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_find"
        android:text="找回密码"
        android:textColor="#fff"
        android:background="#00000000"
        android:layout_alignRight="@id/img_login"
        android:layout_below="@+id/img_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/visitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/img_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_login"/>

</RelativeLayout>
